<%- include('./head') %>
    <%- include('./navbar') %>


        <div class="container p-3">
            <div class="row">
                <div class="card-columns">
                    <% images.forEach(function(image) { %>
                        <div class="card animate__animated animate__fadeInUp">
                            <img src="<%= image.path %>" alt="<%= image.filename %>" class="card-img-top">
                            <div class="card-header">
                                <h2 class="text-center">
                                    <%= image.title %>
                                </h2>
                            </div>
                            <br>
                            <div class="card-body">
                                <p class="card-text">
                                    <%= image.description %>
                                </p>
                                <p class="card-text">
                                    <%= format(image.created_at) %>
                                </p>
                            </div>
                            <a href="/image/<%= image._id %>" class="btn btn-info btn-block">View</a>
                        </div>
                        <% }) %>
                </div>
            </div>

        </div>